@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KJournal.Web</title>
    <link rel="stylesheet" href="~/lib/picocss/pico.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KJournal.Web.styles.css" asp-append-version="true" />
</head>

<body>
        <div class="container login">
            <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <hr />

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <input asp-for="Input.Email" id="Input_Email" type="email" class="input" placeholder="Email" aria-label="Email" required />
                <small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
                <input asp-for="Input.Password" id="Input_Password" type="password" class="input" placeholder="Password" aria-label="Password" required>
                <small><span asp-validation-for="Input.Password" class="text-danger"></span></small>
                <fieldset>
                    <label>
                        <input class="checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </fieldset>
                <button type="submit">Login</button>

                <!-- Links for forgot password, register, resend confirmation -->
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
        
</body>



@section Scripts {
    @* <script></script> *@
}
